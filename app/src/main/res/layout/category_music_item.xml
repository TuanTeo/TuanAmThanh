<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/category_music_background"
        android:contentDescription="@string/category_image"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/song_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_music_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/category"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        app:layout_constraintBottom_toBottomOf="@id/category_music_background"
        app:layout_constraintEnd_toEndOf="@id/category_music_background"
        app:layout_constraintStart_toStartOf="@id/category_music_background"
        app:layout_constraintTop_toTopOf="@id/category_music_background" />

</androidx.constraintlayout.widget.ConstraintLayout>