<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:paddingStart="0dp">

    <ImageView
        android:id="@+id/singer_music_background"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:contentDescription="@string/singer_image"
        android:scaleType="centerCrop"
        android:src="@drawable/song_image"
        app:layout_constraintBottom_toTopOf="@+id/music_singer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_play_circle_singer_item"
        app:layout_constraintBottom_toBottomOf="@id/singer_music_background"
        app:layout_constraintEnd_toEndOf="@id/singer_music_background" />

    <TextView
        android:id="@+id/music_singer_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/singer"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/singer_music_background"
        app:layout_constraintStart_toStartOf="@id/singer_music_background"
        app:layout_constraintTop_toBottomOf="@id/singer_music_background" />

</androidx.constraintlayout.widget.ConstraintLayout>